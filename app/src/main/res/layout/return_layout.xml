<?xml version="1.0" encoding="utf-8"?>
<com.android.lockscreendemo.ReturnLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_marginTop="100sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"

        android:text="TextView"
        android:textSize="66sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="200sp"
        android:text="haha"
        android:textSize="25sp"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iboll"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/date"
        android:layout_marginTop="80dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/idog"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom ="true"

        android:layout_marginBottom="100dp"
        android:layout_gravity="center">

    </ImageView>


    <com.android.lockscreendemo.ColorTextView
        android:id="@+id/unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="滑动解锁"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:layout_alignParentBottom ="true"
        android:paddingBottom="20dp"
        android:textSize="30sp"/>

    <ImageButton
        android:id="@+id/look"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:paddingBottom="20sp"
        android:background="@drawable/ilook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iset"
        android:paddingBottom="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>





</com.android.lockscreendemo.ReturnLayout>